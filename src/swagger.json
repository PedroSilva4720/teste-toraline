{
  "openapi": "3.0.0",
  "info": {
    "title": "test-toraline",
    "description": "Swagger documentation for test-toraline api",
    "contact": {
      "name": "Pedro Torres",
      "email": "pedro.silva4720@gmail.com"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "get": {
        "summary": "List users",
        "tags": ["user"],
        "description": "List all users in database",

        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "description": "user Id"
                      },
                      "name": {
                        "type": "string",
                        "description": "user name"
                      },
                      "tax": {
                        "type": "integer",
                        "minimum": 10,
                        "maximum": 200,
                        "description": "user tax"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "List products",
        "tags": ["product"],
        "description": "List all products in database",

        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "description": "product Id"
                      },
                      "name": {
                        "type": "string",
                        "description": "product name"
                      },
                      "price": {
                        "type": "integer",
                        "minimum": 10,
                        "maximum": 15000,
                        "description": "product price"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/value/{userId}": {
      "post": {
        "summary": "Get budget value",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "the id of user"
          }
        ],
        "tags": ["budget"],
        "description": "passing user id and products ids, return the budget value",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productsIds": {
                    "type": "array",
                    "description": "Array of products ids",
                    "items": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "number",
                      "description": "the budget value"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request, verify if user id and products ids are correct"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "servers": [{ "url": "http://localhost:9001", "description": "Dev server" }]
}
